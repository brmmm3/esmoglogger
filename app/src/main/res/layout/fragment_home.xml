<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.home.HomeFragment">

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/save_gps_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/record_gps_position" />

    <LinearLayout
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gps_position_title"
            android:textSize="18sp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

        <TextView
            android:id="@+id/textview_gps_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/gps_position"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recorded_time_title"
            android:textSize="18sp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

        <TextView
            android:id="@+id/textview_recorded_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/recorded_time_0s"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_record"
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:layout_marginEnd="8dp"
            android:layout_gravity="center"
            app:iconGravity="textStart"
            app:iconTint="#FF0000"
            android:drawableTop="@drawable/record_32p" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_set_notes"
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:layout_marginEnd="8dp"
            app:iconGravity="textStart"
            android:drawableTop="@drawable/notes_32p" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_delete"
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:layout_marginEnd="8dp"
            app:iconGravity="textStart"
            android:drawableTop="@drawable/delete_32p" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_save"
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            app:iconGravity="textStart"
            android:drawableTop="@drawable/save_32p" />

    </LinearLayout>

    <TextView
        android:id="@+id/recordings_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textSize="22sp"
        android:text="@string/recordings_title" />

    <ListView
        android:id="@+id/recordings_list_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp" />

</LinearLayout>